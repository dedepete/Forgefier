<Window x:Class="Forgefier.InstallationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource r_TitleInstallation}" Height="320" Width="650" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="TextBox" Margin="10,10,10,50" TextWrapping="Wrap" IsReadOnly="True" IsUndoEnabled="False" FontFamily="Consolas"/>
        <ProgressBar x:Name="ProgressBar" Margin="10,245,10,10"/>
        <Label x:Name="Label" Margin="10,245,10,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
