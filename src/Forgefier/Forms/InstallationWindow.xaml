<Window x:Class="Forgefier.InstallationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource r_TitleInstallation}" Height="320" Width="650" ResizeMode="CanMinimize" WindowStyle="ToolWindow" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBox" Grid.Row="0" TextWrapping="Wrap" IsReadOnly="True" IsUndoEnabled="False" FontFamily="Consolas"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="1"/>
        <Label x:Name="Label" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
